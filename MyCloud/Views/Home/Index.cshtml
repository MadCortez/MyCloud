@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<MyCloud.Models.FileData>
@if (User.Identity.IsAuthenticated)
{
    <form asp-action="UploadFile" asp-controller="Home" method="post" enctype="multipart/form-data">
        <input type="file" name="uploadedFile" /><br>
        <input type="submit" value="Загрузить" />
    </form>
    <table class="table">
        <tr><th>Имя файла</th><th>Размер файла</th><th>Дата загрузки</th></tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="DownloadFile" asp-controller="Home" method="get" asp-route-filename="@item.FileName">@item.FileName</a>
                </td>
                <td>@item.Weight</td>
                <td>@item.CreateDate</td>
            </tr>
        }
    </table>
}
